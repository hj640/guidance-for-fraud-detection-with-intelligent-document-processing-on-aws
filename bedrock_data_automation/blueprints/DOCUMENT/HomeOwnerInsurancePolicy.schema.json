{
  "class": "Home Owner Insurance Policy",
  "description": "This is a blueprint for home owner insurance policy.",
  "type": "object",
  "definitions": {
    "PolicyInfo": {
      "type": "object",
      "properties": {
        "number": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Extract the policy number - unique alphanumeric identifier typically found near the top of the document"
        },
        "name": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Policy holder name"
        },
        "effective_date": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Policy start date following 'Effective Date:' at document top"
        },
        "expiration_date": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Date when policy coverage ends, found after 'Expiration Date:' label"
        }
      }
    },
    "InsuredInfo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Insured's name"
        },
        "address": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Insured's home address"
        }
      }
    },
    "AgentInfo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Agent's name"
        },
        "phoneNumber": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Agent's phone number"
        }
      }
    },
    "CoverageInfo": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "inferenceType": "explicit",
          "instruction": "Extract coverage amount as numeric value only, without currency symbols or commas (e.g., 250000 for $250,000)"
        },
        "description": {
          "type": "string",
          "inferenceType": "explicit",
          "instruction": "Text from Description row explaining what this coverage protects"
        }
      }
    }
  },
  "properties": {
    "PolicyInfo": {
      "$ref": "#/definitions/PolicyInfo",
      "instruction": "Extract policy information"
    },
    "InsuredInfo": {
      "$ref": "#/definitions/InsuredInfo",
      "instruction": "Extract insured information"
    },
    "AgentInfo": {
      "$ref": "#/definitions/AgentInfo",
      "instruction": "Extract agent information"
    },
    "Dwelling": {
      "$ref": "#/definitions/CoverageInfo",
      "instruction": "Extract dwelling coverage information."
    },
    "Other": {
      "$ref": "#/definitions/CoverageInfo",
      "instruction": "Extract other structures coverage information"
    },
    "PersonalProperty": {
      "$ref": "#/definitions/CoverageInfo",
      "instruction": "Extract personal property coverage information"
    },
    "UseLoss": {
      "$ref": "#/definitions/CoverageInfo",
      "instruction": "Extract loss of use coverage"
    }
  }
}